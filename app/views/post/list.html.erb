<% if @posts.blank? %>
<p>There are not any posts currently in the system.</p>
<% else %>
<p>These are the current posts in our system</p>

<ul id = "posts">
  <% @posts.each do |c| %>
    <li>
     <%= link_to c.title, {:action => 'show', :id => c.id} -%>
     <b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
     <b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
        :confirm => "Are you sure you want to delete this item?" %></b>
    </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Post", {:action => 'new' }%></p>
